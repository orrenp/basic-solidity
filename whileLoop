pragma solidity >=0.8.7;

//Create smart contact called exampleContract
contract exampleContract {

   //Unassigned integer called i
   uint i;

      //Start the constructor - set initial integers above as variables
      constructor() public {

         //Set the variable
         i = 0; 

      //End the constructor
      }

//Create function called whileLoop
function whileLoop() public returns (uint) {

   //Start the while loop
   while (i < 10) {
      
      //Create the while loop counter
      i++;

   //End while loop
   }

//Return the final loop result in the transaction details
return i;

//End the function
}

//End the smart contract
}
